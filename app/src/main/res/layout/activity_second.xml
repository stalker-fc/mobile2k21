<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/counters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/counters_start"
            style="@style/secondTaskButton"
            android:text="@string/counters_start_text" />

        <Button
            android:id="@+id/counters_stop"
            style="@style/secondTaskButton"
            android:text="@string/counters_stop_text" />

        <Button
            android:id="@+id/counters_reset"
            style="@style/secondTaskButton"
            android:text="@string/counters_reset_text" />
    </LinearLayout>
</LinearLayout>